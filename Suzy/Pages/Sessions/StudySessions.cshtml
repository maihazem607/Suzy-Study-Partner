@page
@{
    ViewData["Title"] = "Study Sessions";
    ViewData["PageTitle"] = "Study Session: Advanced Biology";
    ViewData["SearchPlaceholder"] = "Search participants, notes...";
    ViewData["ShowInviteButton"] = "true";
    Layout = "_Layout";
}

<style>
    .participants-section {
        background: #ecebe7;
        padding: 20px;
        color: #333;
        height: 460px;
        border-right: 1px solid rgba(0, 0, 0, 0.2);
    }

    .participant-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 8px;
        border: 1px solid rgba(0, 0, 0, 0.2);
    }

    .cover-upload {
        background: #ecebe7;
        padding: 25px;
        text-align: center;
        margin-bottom: 15px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
        cursor: pointer;
        transition: all 0.3s ease;
        height: 100px;
    }

    .cover-upload:hover {
        background: rgba(0, 123, 255, 0.05);
    }

    .timer-area {
        background: #ecebe7;
        padding: 15px;
        color: #333;
        text-align: center;
        height: 200px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    }

    .progress-area {
        background: #ecebe7;
        padding: 15px;
        color: #333;
        height: 200px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    }

    .spotify-area {
        background: #ecebe7;
        padding: 20px;
        color: #333;
        height: 280px;
        border-right: 1px solid rgba(0, 0, 0, 0.2);
    }

    .todo-area {
        background: #ecebe7;
        padding: 20px;
        color: #333;
        height: 280px;
        overflow-y: auto;
    }

    .todo-area::-webkit-scrollbar {
        width: 6px;
    }

    .todo-area::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.02);
        border-radius: 3px;
    }

    .todo-area::-webkit-scrollbar-thumb {
        background: rgba(0, 0, 0, 0.1);
        border-radius: 3px;
    }

    .todo-area::-webkit-scrollbar-thumb:hover {
        background: rgba(0, 0, 0, 0.15);
    }

    .timer-display {
        font-size: 2rem;
        font-weight: bold;
        margin: 10px 0;
    }

    .timer-controls {
        margin-top: 10px;
    }

    .timer-controls .btn {
        margin: 2px;
        padding: 6px 12px;
        border: 1px solid rgba(0, 0, 0, 0.2);
        background: #ecebe7;
        color: #333;
        font-size: 0.85rem;
    }

    .timer-controls .btn:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    .progress-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: #ecebe7;
        border: 1px solid rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 8px auto;
        font-weight: bold;
        font-size: 0.9rem;
    }

    .todo-item {
        background: rgba(0, 0, 0, 0.03);
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        padding: 8px;
        margin: 4px 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .todo-item input[type="checkbox"] {
        margin-right: 10px;
        transform: scale(1.1);
    }

    .spotify-controls {
        background: rgba(0, 0, 0, 0.03);
        border: 1px solid rgba(0, 0, 0, 0.1);
        padding: 12px;
        margin: 12px 0;
    }

    .participant-name {
        font-size: 0.8rem;
        margin-top: 5px;
        text-align: center;
    }

    .progress {
        background-color: rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .progress-bar {
        background-color: #333 !important;
    }

    .form-range {
        accent-color: #333;
    }
</style>

<!-- Cover Photo Upload Section -->
<div class="cover-upload" onclick="document.getElementById('coverUpload').click();">
    <i class="fas fa-camera fa-lg mb-2" style="color: #666;"></i>
    <p class="mb-0" style="color: #666; font-size: 0.9rem;">Cover photo can also be uploaded and customized by user</p>
    <input type="file" id="coverUpload" style="display: none;" accept="image/*">
</div>

<!-- Main Session Layout -->
<div class="row g-3">
    <!-- Left Column: Participants -->
    <div class="col-md-3">
        <div class="participants-section">
            <h6 class="mb-3">
                <i class="fas fa-users me-2"></i>Participants
            </h6>

            <!-- Session Creator -->
            <div class="text-center mb-3">
                <div class="participant-avatar mx-auto">
                    <i class="fas fa-user"></i>
                </div>
                <div class="participant-name">
                    <strong>You (Host)</strong>
                </div>
            </div>

            <!-- Other Participants -->
            <div class="row">
                <div class="col-6">
                    <div class="participant-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="participant-name">Sarah</div>
                </div>
                <div class="col-6">
                    <div class="participant-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="participant-name">Mike</div>
                </div>
                <div class="col-6">
                    <div class="participant-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="participant-name">Alex</div>
                </div>
                <div class="col-6">
                    <div class="participant-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="participant-name">Emma</div>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small>5 participants online</small>
            </div>
        </div>
    </div>

    <!-- Middle Column: Timer and Spotify -->
    <div class="col-md-4">
        <!-- Timer Area -->
        <div class="timer-area mb-3">
            <h6><i class="fas fa-clock me-2"></i>Study Timer</h6>
            <div class="timer-display" id="timerDisplay">25:00</div>
            <div class="timer-controls">
                <button class="btn btn-sm" onclick="startTimer()">
                    <i class="fas fa-play"></i> Start
                </button>
                <button class="btn btn-sm" onclick="pauseTimer()">
                    <i class="fas fa-pause"></i> Pause
                </button>
                <button class="btn btn-sm" onclick="resetTimer()">
                    <i class="fas fa-stop"></i> Reset
                </button>
            </div>
            <div class="mt-2">
                <small>Pomodoro: 25 min focus â€¢ 5 min break</small>
            </div>
        </div>

        <!-- Spotify Music Area -->
        <div class="spotify-area">
            <h6><i class="fab fa-spotify me-2"></i>Study Music</h6>
            <p style="font-size: 0.85rem;">Spotify music pulled from API</p>

            <div class="spotify-controls">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div style="font-weight: bold; font-size: 0.9rem;">Lo-fi Hip Hop Radio</div>
                        <div style="font-size: 0.8rem; opacity: 0.7;">Chill Study Beats</div>
                    </div>
                    <button class="btn btn-sm">
                        <i class="fas fa-play"></i>
                    </button>
                </div>
            </div>

            <div class="mt-2">
                <button class="btn btn-sm me-2">
                    <i class="fas fa-backward"></i>
                </button>
                <button class="btn btn-sm me-2">
                    <i class="fas fa-pause"></i>
                </button>
                <button class="btn btn-sm">
                    <i class="fas fa-forward"></i>
                </button>
            </div>

            <div class="mt-2">
                <small>Volume</small>
                <input type="range" class="form-range">
            </div>
        </div>
    </div>

    <!-- Right Column: Progress and Todo -->
    <div class="col-md-5">
        <!-- Progress Area -->
        <div class="progress-area mb-3">
            <h6><i class="fas fa-chart-line me-2"></i>Session Progress</h6>

            <div class="row">
                <div class="col-4 text-center">
                    <div class="progress-circle">50%</div>
                    <small>Goals Complete</small>
                </div>
                <div class="col-4 text-center">
                    <div class="progress-circle">3/5</div>
                    <small>Tasks Done</small>
                </div>
                <div class="col-4 text-center">
                    <div class="progress-circle">2h</div>
                    <small>Time Studied</small>
                </div>
            </div>

            <div class="mt-3">
                <div class="d-flex justify-content-between">
                    <small>Group Focus Score</small>
                    <small>85%</small>
                </div>
                <div class="progress" style="height: 6px;">
                    <div class="progress-bar" style="width: 85%"></div>
                </div>
            </div>
        </div>

        <!-- Todo List Area -->
        <div class="todo-area">
            <h6><i class="fas fa-tasks me-2"></i>Todo List for This Session</h6>

            <div class="todo-item">
                <input type="checkbox" checked>
                <span style="text-decoration: line-through;">Review Chapter 5: Cell Division</span>
            </div>

            <div class="todo-item">
                <input type="checkbox" checked>
                <span style="text-decoration: line-through;">Complete practice problems 1-10</span>
            </div>

            <div class="todo-item">
                <input type="checkbox">
                <span>Create flashcards for mitosis</span>
            </div>

            <div class="todo-item">
                <input type="checkbox">
                <span>Study photosynthesis diagrams</span>
            </div>

            <div class="todo-item">
                <input type="checkbox">
                <span>Group discussion: enzyme functions</span>
            </div>

            <div class="mt-2">
                <button class="btn btn-sm">
                    <i class="fas fa-plus me-1"></i>Add Task
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let timerInterval;
        let timeLeft = 25 * 60; // 25 minutes in seconds
        let isRunning = false;

        function updateDisplay() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('timerDisplay').textContent =
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        function startTimer() {
            if (!isRunning) {
                isRunning = true;
                timerInterval = setInterval(() => {
                    if (timeLeft > 0) {
                        timeLeft--;
                        updateDisplay();
                    } else {
                        // Timer finished
                        clearInterval(timerInterval);
                        isRunning = false;
                        alert('Study session complete! Time for a break.');
                    }
                }, 1000);
            }
        }

        function pauseTimer() {
            if (isRunning) {
                clearInterval(timerInterval);
                isRunning = false;
            }
        }

        function resetTimer() {
            clearInterval(timerInterval);
            isRunning = false;
            timeLeft = 25 * 60;
            updateDisplay();
        }

        // Initialize display
        updateDisplay();

        // Cover photo upload handler
        document.getElementById('coverUpload').addEventListener('change', function (e) {
            if (e.target.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    // You can add logic here to display the uploaded image
                    alert('Cover photo uploaded successfully!');
                };
                reader.readAsDataURL(e.target.files[0]);
            }
        });
    </script>
}
