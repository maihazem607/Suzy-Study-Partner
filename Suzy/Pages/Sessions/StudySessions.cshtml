@page
@{
    ViewData["Title"] = "Study Sessions";
    ViewData["PageTitle"] = "Study Session: Advanced Biology";
    ViewData["SearchPlaceholder"] = "Search participants, notes...";
    ViewData["ShowInviteButton"] = "true";
    Layout = "_Layout";
}

@section Head {
    <link rel="stylesheet" href="~/css/study-sessions.css" />
}

<div class="page-container">
@await Html.PartialAsync("_Sidebar")

    <div class="page-content">
        <div class="container-fluid p-3">
            <!-- Cover Photo Section -->
           <img src="~/lib/assets/StudySessionBG.jpeg" alt="Cover Photo" class="cover-photo">
            <!-- Main Session Layout -->
            <div class="row g-3">
                <!-- Left Column: Participants -->
                <div class="col-md-4">
                    <div class="participants-section">
                        <h6 class=" mb-3">
                            <i class="fas fa-users me-2"></i>Participants
                        </h6>

                        <!-- Session Creator -->
                        <div class="text-center mb-3">
                            <div class="participant-avatar mx-auto">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="participant-name">
                                <strong>You (Host)</strong>
                            </div>
                        </div>

                        <!-- Other Participants -->
                        <div class="row g-2">
                            <div class="col-6 text-center">
                                <div class="participant-avatar mx-auto">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="participant-name">Sarah</div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="participant-avatar mx-auto">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="participant-name">Mike</div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="participant-avatar mx-auto">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="participant-name">Alex</div>
                            </div>
                            <div class="col-6 text-center">
                                <div class="participant-avatar mx-auto">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="participant-name">Emma</div>
                            </div>
                        </div>

                        <div class="mt-3 text-center">
                            <small>5 participants online</small>
                        </div>
                    </div>
                </div>

                <!-- Middle Column: Timer and Spotify -->
                <div class="col-md-4">
                    <div class="middle-column">
                        <!-- Timer Area -->
                        <div class="timer-area timer-area-main">
                            <div>
                                <h6><i class="fas fa-clock me-2"></i>Study Timer</h6>
                                <div class="timer-display timer-display-main" id="timerDisplay">25:00</div>
                                <div class="timer-controls text-center">
                                    <button class="btn btn-sm me-1" onclick="startTimer()">
                                        <i class="fas fa-play"></i> Start
                                    </button>
                                    <button class="btn btn-sm me-1" onclick="pauseTimer()">
                                        <i class="fas fa-pause"></i> Pause
                                    </button>
                                    <button class="btn btn-sm" onclick="resetTimer()">
                                        <i class="fas fa-stop"></i> Reset
                                    </button>
                                </div>
                            </div>
                            <div class="text-center">
                                <small>Pomodoro: 25 min focus â€¢ 5 min break</small>
                            </div>
                        </div>
                        <!-- Spotify Area -->
                        <div class="spotify-container">
                            <iframe data-testid="embed-iframe" style="border-radius:12px"
                                src="https://open.spotify.com/embed/playlist/4B3pmyimpUkTcu0sOfQlBS?utm_source=generator"
                                width="100%" height="352" frameBorder="0" allowfullscreen=""
                                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
                                loading="lazy"></iframe>
                        </div>
                    </div>
                </div>

                <!-- Right Column: SuzyVod and Todo -->
                <div class="col-md-4">
                    <div class="right-column">
                        <!-- Video Area -->
                        <div class="suzyvod-area">
                            <div class="video-container">
                                <img src="~/lib/assets/SuzyGif.gif" alt="SuzyGif" class="suzyvod-video">
                            </div>
                        </div>

                        <!-- Todo List Area -->
                        <div class="todo-area">
                            <h6><i class="fas fa-tasks me-2"></i>Todo List for This Session</h6>

                            <div class="todo-item">
                                <input type="checkbox" checked>
                                <span class="todo-completed">Review Chapter 5: Cell Division</span>
                            </div>

                            <div class="todo-item">
                                <input type="checkbox" checked>
                                <span class="todo-completed">Complete practice problems 1-10</span>
                            </div>

                            <div class="todo-item">
                                <input type="checkbox">
                                <span>Create flashcards for mitosis</span>
                            </div>

                            <div class="todo-item">
                                <input type="checkbox">
                                <span>Study photosynthesis diagrams</span>
                            </div>

                            <div class="todo-item">
                                <input type="checkbox">
                                <span>Group discussion: enzyme functions</span>
                            </div>

                            <div class="mt-2">
                                <button class="btn btn-sm">
                                    <i class="fas fa-plus me-1"></i>Add Task
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

@section Scripts {
                <script>
                    let timerInterval;
                    let timeLeft = 25 * 60; // 25 minutes in seconds
                    let isRunning = false;

                    function updateDisplay() {
                        const minutes = Math.floor(timeLeft / 60);
                        const seconds = timeLeft % 60;
                        document.getElementById('timerDisplay').textContent =
                            `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                    }

                    function startTimer() {
                        if (!isRunning) {
                            isRunning = true;
                            timerInterval = setInterval(() => {
                                if (timeLeft > 0) {
                                    timeLeft--;
                                    updateDisplay();
                                } else {
                                    // Timer finished
                                    clearInterval(timerInterval);
                                    isRunning = false;
                                    alert('Study session complete! Time for a break.');
                                }
                            }, 1000);
                        }
                    }

                    function pauseTimer() {
                        if (isRunning) {
                            clearInterval(timerInterval);
                            isRunning = false;
                        }
                    }

                    function resetTimer() {
                        clearInterval(timerInterval);
                        isRunning = false;
                        timeLeft = 25 * 60;
                        updateDisplay();
                    }

                    // Initialize display
                    updateDisplay();

                    // Cover photo upload handler
                    document.getElementById('coverUpload').addEventListener('change', function (e) {
                        if (e.target.files[0]) {
                            const reader = new FileReader();
                            reader.onload = function (e) {
                                // You can add logic here to display the uploaded image
                                alert('Cover photo uploaded successfully!');
                            };
                            reader.readAsDataURL(e.target.files[0]);
                        }
                    });
                </script>
    </div>
    </div>
    </div>
}
