<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Suzy</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <!-- Custom Theme CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: var(--bg-main);
            color: var(--text-color);
            height: 100vh;
            overflow-y: hidden;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .sidebar {
            height: 100vh;
            background-color: var(--color-light);
            border-right: 1px solid var(--color-border);
            transition: width 0.3s ease;
            position: fixed;
            left: 0;
            top: 0;
            width: 16.666667%;
            /* Bootstrap col-md-2 width */
            z-index: 1000;
            overflow: hidden;
        }

        .sidebar.collapsed {
            width: 80px;
            /* Just enough for icons */
        }

        .sidebar-toggle {
            position: absolute;
            top: 0px;
            right: 15px;
            background: transparent;
            border: none;
            padding: 8px 10px;
            cursor: pointer;
            z-index: 1001;
            transition: all 0.2s ease;
            border-radius: 4px;
        }

        .sidebar-toggle:hover {
            background: rgba(0, 0, 0, 0.1);
            color: var(--text-color);
        }

        .sidebar-toggle i {
            font-size: 1.1rem;
        }

        .main-content {
            margin-left: 16.666667%;
            /* Bootstrap col-md-2 width */
            width: 83.333333%;
            /* Bootstrap col-md-10 width */
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        .main-content.expanded {
            margin-left: 80px;
            /* Match collapsed sidebar width */
            width: calc(100% - 80px);
        }

        .sidebar-brand {
            transition: opacity 0.3s ease;
        }

        .sidebar.collapsed .sidebar-brand {
            opacity: 1;
        }

        .sidebar.collapsed .sidebar-brand span {
            display: none;
        }

        .sidebar.collapsed .sidebar-brand img {
            margin-right: 0;
        }

        .sidebar .nav-link {
            color: var(--text-color);
            padding: 12px 20px;
            font-weight: 500;
            font-size: 0.9rem;
            border-bottom: 1px solid var(--color-border);
            transition: background-color 0.2s ease, color 0.2s ease;
            white-space: nowrap;
            display: flex;
            align-items: center;
        }

        .sidebar .nav-link i {
            width: 24px;
            text-align: center;
            margin-right: 10px;
            flex-shrink: 0;
            font-size: 1.2rem;
            /* Make icons bigger */
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            padding: 12px 10px;
        }

        .sidebar.collapsed .nav-link span {
            display: none;
        }

        .sidebar.collapsed .nav-link i {
            margin-right: 0;
            font-size: 1.3rem;
            /* Even bigger when collapsed */
        }

        .sidebar .nav-link {
            color: var(--text-color);
            padding: 12px 20px;
            font-weight: 500;
            font-size: 0.9rem;
            border-bottom: 1px solid var(--color-border);
            transition: background-color 0.2s ease, color 0.2s ease;
            white-space: nowrap;
            display: flex;
            align-items: center;
        }

        .sidebar .nav-link i {
            width: 24px;
            text-align: center;
            margin-right: 10px;
            flex-shrink: 0;
            font-size: 1.2rem;
            /* Make icons bigger */
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            padding: 12px 10px;
        }

        .sidebar.collapsed .nav-link span {
            display: none;
        }

        .sidebar.collapsed .nav-link i {
            margin-right: 0;
            font-size: 1.3rem;
            /* Even bigger when collapsed */
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: rgba(0, 0, 0, 0.08);
            color: var(--text-color);
        }

        .topbar {
            background-color: var(--color-light);
            border-bottom: 1px solid var(--color-border);
            height: 60px;
        }

        .main-content {
            height: calc(100vh - 60px);
            overflow-y: auto;
            margin-left: 16.666667%;
            /* Bootstrap col-md-2 width */
            width: 83.333333%;
            /* Bootstrap col-md-10 width */
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        .main-content.expanded {
            margin-left: 80px;
            /* Match collapsed sidebar width */
            width: calc(100% - 80px);
        }

        .btn {
            border: 1px solid var(--color-border);
            background: var(--color-light);
            color: var(--text-color);
            transition: background-color 0.2s ease, color 0.2s ease;
        }

        .btn:hover {
            background: var(--color-gray);
        }

        .form-control {
            border: 1px solid var(--color-border);
            background: var(--color-light);
            color: var(--text-color);
        }
    </style>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Sidebar -->
            <div class="sidebar d-flex flex-column p-0" id="sidebar">
                <!-- Sidebar Toggle Button -->
                <div class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </div>
                <div class="text-left py-4 sidebar-brand" style="padding-left: 20px; padding-top: 3rem;">
                    <h3><img src="~/lib/assets/SuzyIcon.ico" alt="Suzy"
                            style=" width: 50px; height: 54px; margin-right: 12px; vertical-align: left;"><span
                            style="position: relative; top: 7px; margin-left: 3px;">Suzy</span></h3>
                </div>
                <nav class="nav flex-column">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? "active" : "")"
                        href="/"><i class="fas fa-home"></i><span>Dashboard</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-user-plus"></i><span>Register / Login</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-upload"></i><span>Upload Notes</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-folder-plus"></i><span>Categorize Notes</span></a>
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Flashcards") == true ? "active" : "")"
                        href="/Flashcards/Flashindex"><i class="fas fa-clone"></i><span>Flashcards</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-edit"></i><span>Mock Exams</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-chart-line"></i><span>Progress</span></a>
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("StudySessions") == true ? "active" : "")"
                        href="/Sessions/StudySessions"><i class="fas fa-users"></i><span>Study Sessions</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-bell"></i><span>Reminders</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-tasks"></i><span>To-Do List</span></a>
                    <a class="nav-link" href="#"><i class="fas fa-cogs"></i><span>Settings</span></a>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="main-content" id="mainContent">
                <!-- Topbar -->
                <div class="topbar d-flex justify-content-between align-items-center px-4 py-3">
                    <h5 class="m-0">@ViewData["PageTitle"]</h5>
                    <form class="d-flex" style="width: 40%;">
                        <input class="form-control me-2" type="search" placeholder="@ViewData["SearchPlaceholder"]"
                            aria-label="Search">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                    <div class="d-flex align-items-center gap-3">
                        @if (ViewData["ShowInviteButton"]?.ToString() == "true")
                        {
                            <button class="btn btn-success btn-sm">
                                <i class="fas fa-plus me-1"></i>Invite
                            </button>
                        }
                        @if (ViewData["ShowThemeToggle"]?.ToString() == "true")
                        {
                            <button id="themeToggle" class="theme-toggle-btn" title="Toggle Theme">
                                <i class="fas fa-adjust"></i>
                            </button>
                        }
                        <i class="fas fa-user-circle fa-2x"></i>
                    </div>
                </div>

                <!-- Page Content -->
                <div class="container-fluid p-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Sidebar toggle functionality
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.getElementById('mainContent');
            const toggleIcon = this.querySelector('i');

            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');

            // Change icon based on state
            if (sidebar.classList.contains('collapsed')) {
                toggleIcon.className = 'fas fa-chevron-right';
            } else {
                toggleIcon.className = 'fas fa-bars';
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
