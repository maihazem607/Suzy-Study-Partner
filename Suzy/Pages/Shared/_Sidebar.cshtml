        <a class="nav-link" href="/MockTest/index"><i class="fas fa-edit me-2"></i><span>Mock Exams</span></a>

        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Progress") == true ? "active" : "")"
